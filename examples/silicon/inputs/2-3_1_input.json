{
    "common_options": {
            "basis": {
                "Si": ["3s", "3p", "d*"]
            },
            "device": "cpu",
            "dtype": "float32",
            "overlap": false
    },
    "train_options": {
        "num_epoch": 1500,
        "batch_size": 1,
        "ref_batch_size": 1,
        "optimizer": {
            "lr": 0.01,
            "type": "Adam"
        },
        "lr_scheduler": {
            "type": "exp",
            "gamma": 0.999
        },
        "loss_options":{
            "train": {"method": "eigvals"},
            "reference": {"method": "eigvals"}
        },
        "save_freq": 500,
        "validation_freq": 10,
        "display_freq": 100
    },
    "model_options": {
        "nnsk": {
            "onsite": {"method": "strain", "rs":2.5 ,"w":0.3},
            "hopping": {"method": "powerlaw", "rs":5.0, "w": 0.1},
            "freeze": false
        }
    },
    "data_options": {
        "train": {
            "root": "./data/",
            "prefix": "kpathmd25",
            "get_eigenvalues": true
        },
        "reference": {
            "root": "./data/",
            "prefix": "kpath_spk",
            "get_eigenvalues": true
        }
    }
}
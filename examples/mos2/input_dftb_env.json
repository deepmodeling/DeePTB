{
    "common_options": {
            "basis": {
                "Mo":["5s","5p","4d"],
                "S":["3s","3p","d*"]
            },
            "device": "cpu",
            "dtype": "float32",
            "overlap": true,
            "seed": 42
    },
    "train_options": {
        "num_epoch": 500,
        "batch_size": 1,
        "optimizer": {
            "lr": 1e-3,
            "type": "Adam"
        },
        "lr_scheduler": {
            "type": "exp",
            "gamma": 0.999
        },
        "loss_options":{
            "train": {"method": "eigvals"}
        },
        "save_freq": 50,
        "validation_freq": 10,
        "display_freq": 1
    },
    "model_options": {
        "dftbsk": {
            "skdata":"../../../dftb_skfiles/ParameterSets/PRIOR/complete_set"
        },
        "embedding":{
            "method": "se2",
            "rs": 2.5,
            "rc": 3.5,
            "radial_net": {
                "neurons": [40,20,10]
            }
        },
        "prediction":{
            "method": "sktb",
            "neurons": [50,50,50]
        }
    },
    "data_options": {
        "train": {
            "root": "./data/",
            "prefix": "set",
            "get_eigenvalues": true
        }
    }
}